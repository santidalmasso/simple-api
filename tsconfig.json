{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018", "dom", "es2020"],
    "outDir": "dist",
    "module": "ES6",
    "moduleResolution": "node",
    "strict": true,
    "noEmitOnError": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "stripInternal": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": ["src/**/*"]
}